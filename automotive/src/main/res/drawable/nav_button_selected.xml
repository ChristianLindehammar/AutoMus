<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4DFF0000" /> <!-- 30% opacity red shadow -->
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Main button with slight offset to create shadow effect -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/apple_music_red" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list>
