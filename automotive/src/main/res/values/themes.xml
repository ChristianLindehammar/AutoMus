<resources>
    <!-- Apple Music theme -->
    <style name="Theme.AutoMus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar and nav bar colors -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/on_surface_light</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        
        <!-- For large touch targets in automotive -->
        <item name="minTouchTargetSize">56dp</item>

        <!-- Customize button styles -->
        <item name="materialButtonStyle">@style/AppleMusicButtonStyle</item>
        <item name="bottomNavigationStyle">@style/AppleMusicBottomNavigation</item>
    </style>

    <style name="AppleMusicButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/apple_red</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="AppleMusicBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/apple_red</item>
        <item name="itemTextColor">@color/apple_red</item>
        <item name="backgroundTint">@color/white</item>
    </style>
</resources>