<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark/Night theme -->
    <style name="Theme.AutoMus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color - use slightly brighter in dark mode for contrast -->
        <item name="colorPrimary">@color/primary_dark_mode</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark_mode</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_dark_mode</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_dark_mode</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar and nav bar colors -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        
        <!-- Background colors - dark to reduce eye strain at night -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        
        <!-- Text colors - brighter for better contrast -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        
        <!-- For large touch targets in automotive -->
        <item name="minTouchTargetSize">56dp</item>
    </style>
</resources>