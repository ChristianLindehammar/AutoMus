<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/playlist_art_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        
        <ImageView
            android:id="@+id/playlist_cover_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:contentDescription="Playlist cover"
            android:scaleType="centerCrop"
            tools:src="@drawable/album_art_placeholder" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/playlist_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/playlist_art_container"
        app:layout_constraintStart_toStartOf="@id/playlist_art_container"
        app:layout_constraintTop_toBottomOf="@id/playlist_art_container"
        tools:text="Electronic Mix" />

    <TextView
        android:id="@+id/playlist_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_secondary_light"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/playlist_title"
        app:layout_constraintStart_toStartOf="@id/playlist_title"
        app:layout_constraintTop_toBottomOf="@id/playlist_title"
        tools:text="Updated weekly" />

</androidx.constraintlayout.widget.ConstraintLayout>
