<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="16dp">

    <ImageView
        android:id="@+id/category_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:contentDescription="Category icon"
        android:scaleType="centerCrop"
        android:src="@drawable/album_art_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/category_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/category_subtitle"
        app:layout_constraintEnd_toStartOf="@+id/status_container"
        app:layout_constraintStart_toEndOf="@+id/category_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Playlists" />

    <TextView
        android:id="@+id/category_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/category_title"
        app:layout_constraintStart_toStartOf="@+id/category_title"
        app:layout_constraintTop_toBottomOf="@+id/category_title"
        tools:text="24 items" />

    <LinearLayout
        android:id="@+id/status_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/category_chevron"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/favorite_indicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="Favorite indicator"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_heart_filled"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/download_indicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Downloaded for offline playback"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_downloaded"
            tools:visibility="visible" />
            
        <ImageView
            android:id="@+id/now_playing_indicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:contentDescription="Currently playing"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_now_playing"
            tools:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/category_chevron"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="Chevron"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_chevron_right" />

</androidx.constraintlayout.widget.ConstraintLayout>