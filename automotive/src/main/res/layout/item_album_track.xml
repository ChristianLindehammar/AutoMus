<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/track_number"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/text_secondary_light"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <TextView
        android:id="@+id/track_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/track_duration"
        app:layout_constraintStart_toEndOf="@+id/track_number"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Starboy (feat. Daft Punk)" />

    <TextView
        android:id="@+id/track_artist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_secondary_light"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/track_title"
        app:layout_constraintStart_toStartOf="@+id/track_title"
        app:layout_constraintTop_toBottomOf="@+id/track_title"
        tools:text="The Weeknd" />

    <TextView
        android:id="@+id/track_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_secondary_light"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/track_title"
        app:layout_constraintEnd_toStartOf="@+id/track_options"
        app:layout_constraintTop_toTopOf="@+id/track_title"
        tools:text="3:50" />

    <ImageButton
        android:id="@+id/track_options"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Track Options"
        android:src="@drawable/ic_more_vert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_secondary_light" />

    <ImageView
        android:id="@+id/track_favorite"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:contentDescription="Favorite"
        android:src="@drawable/ic_heart_filled_new"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/track_duration"
        app:layout_constraintEnd_toStartOf="@+id/track_duration"
        app:layout_constraintTop_toTopOf="@+id/track_duration"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
