<manifest xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Remove conflicting declarations from Apple's SDK -->
    <application>
        <activity android:name="com.apple.android.sdk.authentication.SDKUriHandlerActivity"
                 tools:node="remove" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />

    <application android:appCategory="audio">

        <meta-data
            android:name="com.google.android.gms.car.application"
            android:resource="@xml/automotive_app_desc" />

        <!-- Legacy music service for backward compatibility -->
        <service
            android:name="com.lindehammarkonsult.automus.shared.AppleMusicService"
            android:exported="true"
            android:enabled="false"
            android:foregroundServiceType="mediaPlayback">
            <intent-filter>
                <action android:name="android.media.browse.MediaBrowserService" />
            </intent-filter>
        </service>
        
        <!-- New Media3 music service -->
        <service
            android:name="com.lindehammarkonsult.automus.shared.AppleMusicMediaService"
            android:exported="true"
            android:foregroundServiceType="mediaPlayback">
            <intent-filter>
                <action android:name="androidx.media3.session.MediaLibraryService" />
                <action android:name="androidx.media3.session.MediaSessionService" />
            </intent-filter>
        </service>

        <!-- Apple Music Authentication Activity -->
        <activity
            android:name=".ui.AppleMusicAuthActivity"
            android:exported="false"
            android:label="@string/apple_music_auth_title"
            android:theme="@style/Theme.AutoMus.Shared" />
            
        <!-- QR-based Apple Music Authentication Activity -->
        <activity
            android:name=".ui.AppleMusicQRAuthActivity"
            android:exported="false"
            android:label="@string/apple_music_auth_title"
            android:theme="@style/Theme.AutoMus.Shared" />
            
        <!-- Apple Music Authentication Callback Activity -->
        <activity
            android:name=".auth.AppleMusicAuthCallbackActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.AppCompat">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="automus"
                    android:host="oauth-callback" />
            </intent-filter>
        </activity>
        
        <!-- Explicit declaration of SDK Handler Activity to fix manifest merger issue -->
        <activity
            android:name="com.apple.android.sdk.authentication.SDKUriHandlerActivity"
            android:exported="true"
            tools:node="merge">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>

    </application>

</manifest>